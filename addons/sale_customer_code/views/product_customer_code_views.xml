<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_product_customer_code_tree" model="ir.ui.view">
        <field name="name">product.customer.code.tree</field>
        <field name="model">product.customer.code</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="product_code"/>
                <field name="product_name"/>
            </list>
        </field>
    </record>
    
     <record id="view_product_customer_code_search" model="ir.ui.view">
        <field name="name">product.customer.code.search</field>
        <field name="model">product.customer.code</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id"/>
                <field name="product_id"/>
                <field name="product_code"/>
            </search>
        </field>
    </record>

    <record id="action_product_customer_code" model="ir.actions.act_window">
        <field name="name">CÃ³digos de Producto por Cliente</field>
        <field name="res_model">product.customer.code</field>
        <field name="view_mode">list,form</field>
    </record>

    <!-- Menu Item in Sales/Configuration -->
    <menuitem id="menu_product_customer_code"
              parent="sale.menu_sale_config"
              action="action_product_customer_code"
              sequence="10"/>
</odoo>
